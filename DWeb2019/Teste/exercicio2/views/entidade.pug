extends layout

block content
    .w3-container
        h3= e.designacao
    .w3-container
        .w3-card-4
            header.w3-container.w3-green.w3-margin-top
                h3 Informações
            table.w3-table-all
                tr
                    th Sigla
                        td= e.sigla
                tr
                    th Designação
                        td= e.designacao
                tr
                    th Estado
                        td= e.estado
                tr
                    th sioe
                        td= e.sioe
                tr
                    th Internacional
                        td= e.internacional
                
        
    .w3-container
        .w3-card-4
            header.w3-container.w3-green.w3-margin-top
                h3 Tipologias
            table.w3-table-all
                tr
                    th ID
                    th Sigla
                    th Designação
                    th
                    th
                each t in e.tipologias
                    tr
                        td
                            a(href="http://localhost:9091/tipologia/" + t.id)=t.id
                        td= t.sigla
                        td= t.designacao
                        td 
                        td
                            button.w3-button.w3-square.w3-green(onclick="window.location.assign('/tipologia/" + t.id + "')") Consultar
                

    .w3-container
        .w3-card-4
            header.w3-container.w3-green.w3-margin-top
                h3 Processos onde é dono
            table.w3-table-all
                tr
                    th Código
                    th Título 
                each p in e.dono
                    tr
                        td
                            a(href="http://clav.dglab.gov.pt/classes/consultar/c" + p.codigo)=p.codigo
                        td= p.titulo
                        
    .w3-container
        .w3-card-4
            header.w3-container.w3-green.w3-margin-top
                h3 Processos onde é participante
            table.w3-table-all
                tr
                    th Código
                    th Título
                    th Tipo de participante
                    
                each p in e.participante
                    tr
                        td
                            a(href="http://clav.dglab.gov.pt/classes/consultar/c" + p.codigo)=p.codigo
                        td= p.titulo
                        td= p.tipoPar
                        


    footer.w3-container.w3-transparent Made by Pedro Freitas 
        button.w3-button.w3-green.w3-margin(onclick="history.go(-1)") Voltar 
        button.w3-btn.w3-green.w3-margin(onclick="window.location.assign('/')") HomePage 
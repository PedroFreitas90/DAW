extends layout

block content
    .w3-container.w3-section
        .w3-card-4
            header.w3-container.w3-blue
                h3 Informação do Compositor
            .w3-container
                table.w3-table-all.w3-section
                    tr
                        th Identificador
                        th Nome
                        th Biografia
                        th Data Nascimento
                        th Data Óbito
                        th Período
                    tr
                        td= compositor._id
                        td= compositor.nome
                        td= compositor.bio
                        td= compositor.dataNasc
                        td= compositor.dataObito
                        td= compositor.periodo

        .w3-container.w3-blue
            footer.w3-container
                p
                    a(href="/compositores") Voltar à página principal